#!/bin/zsh

export KEYTIMEOUT=1
export HISTSIZE=500
export SAVEHIST=500
export HISTFILE=~/.history
export EDITOR=nvim
#export PAGER='less -X -M'
#if [[ -e /usr/bin/vimmanpager ]] then
#	export MANPAGER=/usr/bin/vimmanpager
#fi
